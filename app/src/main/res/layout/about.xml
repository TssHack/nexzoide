<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:id="@+id/rootlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- ðŸŸ¢ Ú©Ø§Ø±Øª Ø§Ø·Ù„Ø§Ø¹Ø§Øª ØªÙˆØ³Ø¹Ù‡â€ŒØ¯Ù‡Ù†Ø¯Ù‡ Ø§ØµÙ„ÛŒ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:radius="12dp"
            android:elevation="3dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/icon_glide_about"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/app_icon"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"
                    android:padding="3dp"/>

                <TextView
                    android:id="@+id/tv_about_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nexzo Team"
                    android:textSize="18sp"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:padding="4dp"/>

                <TextView
                    android:id="@+id/tv_about_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developer of Nexzo IDE"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:gravity="center"
                    android:padding="2dp"/>

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App version 1.0.0"
                    android:textColor="#4CAF50"
                    android:textSize="13sp"
                    android:padding="4dp"
                    android:gravity="center"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- ðŸŸ£ Ú©Ø§Ø±Øª Ù„ÛŒÙ†Ú©â€ŒÙ‡Ø§ÛŒ Ø§Ø¬ØªÙ…Ø§Ø¹ÛŒ (ØªÙ„Ú¯Ø±Ø§Ù… Ùˆ Ø³Ø§ÛŒØª) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardsoclise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:radius="12dp"
            android:elevation="3dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Social Links"
                    android:textSize="16sp"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:paddingBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- ðŸ”— Ù„ÛŒÙ†Ú© ØªÙ„Ú¯Ø±Ø§Ù… -->
                    <LinearLayout
                        android:id="@+id/link_telegram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_telegram"
                            android:contentDescription="Telegram"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@nexzoteam"
                            android:textSize="13sp"
                            android:textColor="#2196F3"
                            android:paddingTop="4dp"/>

                    </LinearLayout>

                    <!-- ðŸ”— Ù„ÛŒÙ†Ú© ÙˆØ¨â€ŒØ³Ø§ÛŒØª -->
                    <LinearLayout
                        android:id="@+id/link_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_web"
                            android:contentDescription="Website"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="nexzo.ir"
                            android:textSize="13sp"
                            android:textColor="#4CAF50"
                            android:paddingTop="4dp"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- ðŸ”µ Ú©Ø§Ø±Øª Ù„ÛŒØ³Øª ØªÙˆØ³Ø¹Ù‡â€ŒØ¯Ù‡Ù†Ø¯Ú¯Ø§Ù† -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:radius="12dp"
            android:elevation="3dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contributors"
                    android:textSize="16sp"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:paddingBottom="4dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_about_dev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
